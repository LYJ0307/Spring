package com.acorn.web;

import javax.servlet.http.HttpServletRequest;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;

@Controller
public class HelloController {
	
	@GetMapping("/hello")
	public String hi() {
		
		return "hi";	// WEB-INF/views/hi.jsp 응답
	}
	
	@GetMapping("/hi")	// hi?id=test&pw=0000
	public String h2(String id, String pw) {
		
		System.out.println(id + pw);
		
		return "hi2";
	}
	
	
	@GetMapping("/hi2")	//	hi?id=test&pw=1234	=> user객체 생성해서 해당 값을 넣음 
	public String h3(User user) {
		System.out.println( user);
		return "hi3";
		
	}
	
	@GetMapping("/hi0")
	public void hello0(HttpServletRequest request, HttpServletResponse response) {
		
		request.getRequestDispatcher("/WEB-INF/views/hi0.jsp");
		
	}
	

}
